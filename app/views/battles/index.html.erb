
<div class="col-md-12">
<h3>Битви</h3>

<table class="table">
  <thead class="centered">
    <tr>
      <th class="centered">Гравці</th>
      <th class="centered">Життя гравця зліва</th>
      <th class="centered">Життя гравця справа</th>
    </tr>
  </thead>

  <tbody class="centered">
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.has_players %></td>
        <td><%= battle.lp_points %></td>
        <td><%= battle.rp_points %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

  
  